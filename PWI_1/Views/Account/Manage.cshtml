@model PWI_1.Models.LocalPasswordModel
@{
    ViewBag.Title = "Zarządzanie kontem";
}

<header id="manage_header">
    <h1>@ViewBag.Title</h1>
</header>

<div id="main-content">
    <p class="message-success">@ViewBag.StatusMessage</p>

    <p>Jesteś zalogowany jako <strong>@User.Identity.Name</strong>.</p>
    <p>@Html.ActionLink("Wróc do strony głównej", "Index", "Home")</p>

    <section class="todoList">
        @if (ViewBag.HasLocalPassword)
        {
            <header class="intro">
                <div class="intro-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-8 col-md-offset-2">
                                <div id="main">
                                    <div id="main_inner">
                                        @Html.Partial("_ChangePasswordPartial")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
        }
        else
        {
            @Html.Partial("_SetPasswordPartial")
        }
    </section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}